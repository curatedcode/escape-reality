---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg?v=3.0" />
		<meta
			name="description"
			content="Escape rooms in Sarasota, FL. Solve puzzles, find clues, and beat the clock with friends, family, or coworkers. Fun for all skill levels!"
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="theme-color" content="#000000" />
		<meta name="apple-mobile-web-app-status-bar-style" content="default" />
		<link rel="manifest" href="/manifest.json" />
		<script
			is:inline
			async
			src="https://unpkg.com/pwacompat"
			cross-origin="anonymous"></script>

		<title>{title}</title>

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:site" content="@escaperealityfl" />
		<meta name="twitter:url" content="https://escaperealityfl.com" />
		<meta name="twitter:title" content="Escape Reality" />
		<meta
			name="twitter:description"
			content="Escape rooms in Sarasota, FL. Solve puzzles, find clues, and beat the clock with friends, family, or coworkers. Fun for all skill levels!"
		/>
		<meta
			name="twitter:image"
			content="https://escaperealityfl.com/icons/social-card.png"
		/>

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Escape Reality" />
		<meta
			property="og:description"
			content="Escape rooms in Sarasota, FL. Solve puzzles, find clues, and beat the clock with friends, family, or coworkers. Fun for all skill levels!"
		/>
		<meta property="og:site_name" content="Escape Reality" />
		<meta property="og:url" content="https://escaperealityfl.com" />
		<meta
			property="og:image"
			content="https://escaperealityfl.com/icons/social-card.png"
		/>

		<!-- Apple touch icon -->
		<link
			rel="apple-touch-icon"
			sizes="120x120"
			href="/icons/apple-touch-icon_120.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="152x152"
			href="/icons/apple-touch-icon_152.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="167x167"
			href="/icons/apple-touch-icon_167.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/icons/apple-touch-icon_180.png"
		/>

		<!-- Fonts -->
		<!-- <link
			rel="preload"
			href="/fonts/CUSTOM_FONT.woff2"
			as="font"
			type="font/woff2"
			crossorigin="anonymous"
		/> -->
	</head>
	<body>
		<script>
			if ("serviceWorker" in navigator) {
				window.addEventListener("load", function () {
					navigator.serviceWorker.register("/serviceWorker.js").then(() => {
						console.log("SW registration successful");
					});
				});
			}
		</script>
		<div class="flex flex-col min-h-screen bg-black">
			<Header />
			<main>
				<slot />
			</main>
			<Footer />
		</div>
	</body>
</html>
