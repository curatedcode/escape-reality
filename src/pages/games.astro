---
import BookingCTA from "../components/BookingCTA.astro";
import Button from "../components/Button";
import { getButtonClass } from "../components/Button/getButtonClass";
import {
	ArrowRightIcon,
	ChartBarIcon,
	ClockIcon,
	UsersIcon,
} from "../components/Icons";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Games - Escape Reality">
	<div class="flex min-h-screen flex-col">
		{/* Hero Section */}
		<section class="relative h-[60vh] overflow-hidden">
			<div class="absolute inset-0 bg-black/60 z-10"></div>
			<img
				src="/images/games-hero.webp"
				alt="Escape room games"
				class="object-cover w-full absolute blur-[1px] -mt-12"
			/>
			<div
				class="relative z-20 container mx-auto px-4 h-full flex flex-col justify-center items-center text-center"
			>
				<h1
					class="text-4xl md:text-6xl font-bold text-white leading-tight mb-4"
				>
					Our Immersive <span class="text-purple-400">Adventures</span>
				</h1>
				<p class="text-xl text-gray-200 max-w-2xl mb-12">
					Choose from three unique escape room experiences, each designed to
					challenge your mind and test your teamwork.
				</p>
			</div>
		</section>

		{/* Game 1: Murder Mystery */}
		<section
			id="murder-mystery"
			class="py-16 bg-gradient-to-b from-purple-900 to-indigo-900 text-white scroll-m-16"
		>
			<div class="container mx-auto px-4">
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
					<div
						class="relative h-[400px] rounded-xl overflow-hidden order-2 lg:order-1"
					>
						<img
							src="/images/murder-mystery-full.webp"
							alt="Murder Mystery Mansion escape room"
							class="object-cover h-full"
						/>
					</div>

					<div class="order-1 lg:order-2">
						<div
							class="inline-block px-4 py-1 bg-purple-700 rounded-full text-sm font-medium mb-4"
						>
							Detective Theme
						</div>
						<h2 class="text-3xl md:text-4xl font-bold mb-4">Clue Dunnit?</h2>
						<p class="text-lg text-purple-200 mb-6">
							A wealthy businessman has been found dead in his mansion, and
							you're the detective assigned to the case. As you investigate the
							crime scene, you discover that the killer is still in the house
							and has set their sights on you. Solve the murder before you
							become the next victim!
						</p>

						<div class="grid grid-cols-3 gap-4 mb-8">
							<div
								class="bg-purple-800/50 p-4 rounded-lg text-center border border-purple-600"
							>
								<ChartBarIcon class="h-6 w-6 mx-auto mb-2 text-purple-400" />
								<h3 class="font-medium">Difficulty</h3>
								<p class="text-purple-200">Medium</p>
							</div>
							<div
								class="bg-purple-800/50 p-4 rounded-lg text-center border border-purple-600"
							>
								<UsersIcon class="h-6 w-6 mx-auto mb-2 text-purple-400" />
								<h3 class="font-medium">Team Size</h3>
								<p class="text-purple-200">2-8 Players</p>
							</div>
							<div
								class="bg-purple-800/50 p-4 rounded-lg text-center border border-purple-600"
							>
								<ClockIcon class="h-6 w-6 mx-auto mb-2 text-purple-400" />
								<h3 class="font-medium">Duration</h3>
								<p class="text-purple-200">60 Minutes</p>
							</div>
						</div>

						<a
							href="/"
							class={getButtonClass({
								size: "lg",
								class: "bg-purple-600 hover:bg-purple-700 text-white",
							})}
						>
							Book This Adventure
							<ArrowRightIcon class="ml-2 h-4 w-4" />
						</a>
					</div>
				</div>
			</div>
		</section>

		{/* Game 2: FBI Operation */}
		<section
			id="fbi-operation"
			class="py-16 bg-gray-900 text-white scroll-m-16"
		>
			<div class="container mx-auto px-4">
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
					<div>
						<div
							class="inline-block px-4 py-1 bg-blue-700 rounded-full text-sm font-medium mb-4"
						>
							Spy Theme
						</div>
						<h2 class="text-3xl md:text-4xl font-bold mb-4">
							FBI & The Toxic Takedown
						</h2>
						<p class="text-lg text-gray-300 mb-6">
							You've been recruited for a top-secret FBI operation to infiltrate
							the headquarters of a dangerous criminal organization. Your
							mission is to recover stolen intelligence before it's sold to
							foreign agents. You have 60 minutes to break into their secure
							facility, find the intelligence, and escape before security
							discovers your presence.
						</p>

						<div class="grid grid-cols-3 gap-4 mb-8">
							<div
								class="bg-gray-800/50 p-4 rounded-lg text-center border border-gray-700"
							>
								<ChartBarIcon class="h-6 w-6 mx-auto mb-2 text-blue-400" />
								<h3 class="font-medium">Difficulty</h3>
								<p class="text-gray-300">Hard</p>
							</div>
							<div
								class="bg-gray-800/50 p-4 rounded-lg text-center border border-gray-700"
							>
								<UsersIcon class="h-6 w-6 mx-auto mb-2 text-blue-400" />
								<h3 class="font-medium">Team Size</h3>
								<p class="text-gray-300">3-8 Players</p>
							</div>
							<div
								class="bg-gray-800/50 p-4 rounded-lg text-center border border-gray-700"
							>
								<ClockIcon class="h-6 w-6 mx-auto mb-2 text-blue-400" />
								<h3 class="font-medium">Duration</h3>
								<p class="text-gray-300">60 Minutes</p>
							</div>
						</div>

						<a
							href="/"
							class={getButtonClass({
								size: "lg",
								class: "bg-blue-600 hover:bg-blue-700 text-white",
							})}
						>
							Book This Adventure
							<ArrowRightIcon class="ml-2 h-4 w-4" />
						</a>
					</div>

					<div class="relative h-[400px] rounded-xl overflow-hidden">
						<img
							src="/images/fbi-operation-full.webp"
							alt="FBI Operation escape room"
							class="object-cover h-full"
						/>
					</div>
				</div>
			</div>
		</section>

		{/* Game 3: Brewery Heist */}
		<section
			id="brewery-heist"
			class="py-16 bg-amber-950 text-white scroll-m-16"
		>
			<div class="container mx-auto px-4">
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
					<div
						class="relative h-[400px] rounded-xl overflow-hidden order-2 lg:order-1"
					>
						<img
							src="/images/brewery-heist-full.webp"
							alt="Brewery Heist escape room"
							class="object-cover h-full"
						/>
					</div>

					<div class="order-1 lg:order-2">
						<div
							class="inline-block px-4 py-1 bg-amber-700 rounded-full text-sm font-medium mb-4"
						>
							Heist Theme
						</div>
						<h2 class="text-3xl md:text-4xl font-bold mb-4">Brewery Heist</h2>
						<p class="text-lg text-amber-200 mb-6">
							A famous brewery has created the world's most delicious beer, but
							they're keeping the recipe locked away. As master thieves, your
							team has been hired to break into the brewery after hours, crack
							the security system, find the secret recipe, and escape before the
							night watchman makes his rounds.
						</p>

						<div class="grid grid-cols-3 gap-4 mb-8">
							<div
								class="bg-amber-900/50 p-4 rounded-lg text-center border border-amber-700"
							>
								<ChartBarIcon class="h-6 w-6 mx-auto mb-2 text-amber-400" />
								<h3 class="font-medium">Difficulty</h3>
								<p class="text-amber-200">Hard</p>
							</div>
							<div
								class="bg-amber-900/50 p-4 rounded-lg text-center border border-amber-700"
							>
								<UsersIcon class="h-6 w-6 mx-auto mb-2 text-amber-400" />
								<h3 class="font-medium">Team Size</h3>
								<p class="text-amber-200">3-10 Players</p>
							</div>
							<div
								class="bg-amber-900/50 p-4 rounded-lg text-center border border-amber-700"
							>
								<ClockIcon class="h-6 w-6 mx-auto mb-2 text-amber-400" />
								<h3 class="font-medium">Duration</h3>
								<p class="text-amber-200">60 Minutes</p>
							</div>
						</div>

						<a
							href="/"
							class={getButtonClass({
								size: "lg",
								class: "bg-amber-600 hover:bg-amber-700 text-white",
							})}
						>
							Book This Adventure
							<ArrowRightIcon class="ml-2 h-4 w-4" />
						</a>
					</div>
				</div>
			</div>
		</section>

		{/* Game Comparison */}
		<section class="py-16 bg-black text-white">
			<div class="container mx-auto px-4">
				<div class="text-center mb-12">
					<h2 class="text-3xl md:text-4xl font-bold mb-4">Compare Our Games</h2>
					<p class="text-lg text-gray-300 max-w-2xl mx-auto">
						Not sure which adventure to choose? Compare our games side by side.
					</p>
				</div>

				<div class="overflow-x-auto">
					<table class="w-full border-collapse">
						<thead>
							<tr class="border-b border-gray-800">
								<th class="p-4 text-left">Game</th>
								<th class="p-4 text-center">Theme</th>
								<th class="p-4 text-center">Difficulty</th>
								<th class="p-4 text-center">Team Size</th>
								<th class="p-4 text-center">Duration</th>
								<th class="p-4 text-center">Price</th>
								<th class="p-4 text-center">Book</th>
							</tr>
						</thead>
						<tbody>
							<tr class="border-b border-gray-800">
								<td class="p-4 font-medium">Clue Dunnit?</td>
								<td class="p-4 text-center">Detective</td>
								<td class="p-4 text-center">Medium</td>
								<td class="p-4 text-center">2-8 Players</td>
								<td class="p-4 text-center">60 Minutes</td>
								<td class="p-4 text-center">$35/person</td>
								<td class="p-4 text-center">
									<Button size="sm" class="bg-purple-600 hover:bg-purple-700">
										Book
									</Button>
								</td>
							</tr>
							<tr class="border-b border-gray-800">
								<td class="p-4 font-medium">FBI & The Toxic Takedown</td>
								<td class="p-4 text-center">Spy</td>
								<td class="p-4 text-center">Hard</td>
								<td class="p-4 text-center">3-8 Players</td>
								<td class="p-4 text-center">60 Minutes</td>
								<td class="p-4 text-center">$35/person</td>
								<td class="p-4 text-center">
									<Button size="sm" class="bg-blue-600 hover:bg-blue-700">
										Book
									</Button>
								</td>
							</tr>
							<tr>
								<td class="p-4 font-medium">Brewery Heist</td>
								<td class="p-4 text-center">Heist</td>
								<td class="p-4 text-center">Hard</td>
								<td class="p-4 text-center">3-10 Players</td>
								<td class="p-4 text-center">60 Minutes</td>
								<td class="p-4 text-center">$35/person</td>
								<td class="p-4 text-center">
									<Button size="sm" class="bg-amber-600 hover:bg-amber-700">
										Book
									</Button>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</section>

		{/* FAQ */}
		<section class="py-16 bg-gray-900 text-white">
			<div class="container mx-auto px-4">
				<div class="text-center mb-12">
					<h2 class="text-3xl md:text-4xl font-bold mb-4">
						Frequently Asked Questions
					</h2>
					<p class="text-lg text-gray-300 max-w-2xl mx-auto">
						Everything you need to know before your adventure.
					</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
					<div class="bg-gray-800 p-6 rounded-xl border border-gray-700">
						<h3 class="text-xl font-bold mb-3">
							Do I need to make a reservation?
						</h3>
						<p class="text-gray-300">
							Yes, reservations are required. We recommend booking at least
							24-48 hours in advance, especially for weekend slots.
						</p>
					</div>

					<div class="bg-gray-800 p-6 rounded-xl border border-gray-700">
						<h3 class="text-xl font-bold mb-3">
							Will we be paired with strangers?
						</h3>
						<p class="text-gray-300">
							No, all bookings are private. Your group will have the entire room
							to yourselves at no additional cost.
						</p>
					</div>

					<div class="bg-gray-800 p-6 rounded-xl border border-gray-700">
						<h3 class="text-xl font-bold mb-3">How early should we arrive?</h3>
						<p class="text-gray-300">
							Please arrive 15 minutes before your scheduled time for check-in
							and a brief orientation.
						</p>
					</div>

					<div class="bg-gray-800 p-6 rounded-xl border border-gray-700">
						<h3 class="text-xl font-bold mb-3">Are the rooms scary?</h3>
						<p class="text-gray-300">
							Our rooms are designed to be thrilling but not frightening. There
							are no jump scares or horror elements.
						</p>
					</div>
				</div>
			</div>
		</section>

		{/* Booking CTA */}
		<BookingCTA />
	</div>
</Layout>
