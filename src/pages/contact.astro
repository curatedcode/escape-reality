---
import BookingCTA from "../components/BookingCTA.astro";
import Button from "../components/Button";
import { getButtonClass } from "../components/Button/getButtonClass";
import { YoutubeIcon } from "../components/Icons";
import {
	ArrowRightIcon,
	ClockIcon,
	FacebookIcon,
	InstagramIcon,
	MapPinIcon,
	PhoneIcon,
	SendIcon,
	XTwitterIcon,
} from "../components/Icons";
import Input from "../components/Input.astro";
import Textarea from "../components/Textarea.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact Us - Escape Reality">
	<div class="flex min-h-screen flex-col">
		{/* Hero Section */}
		<section class="relative h-[60vh] overflow-hidden">
			<div class="absolute inset-0 bg-black/60 z-10"></div>
			<img
				src="/images/contact-hero.webp"
				alt="Contact Us"
				class="object-cover w-full absolute blur-[1px] -mt-20"
			/>
			<div
				class="relative z-20 container mx-auto px-4 h-full flex flex-col justify-center items-center text-center"
			>
				<h1
					class="text-4xl md:text-6xl font-bold text-white leading-tight mb-4"
				>
					Get in <span class="text-purple-400">Touch</span>
				</h1>
				<p class="text-xl text-gray-200 max-w-2xl">
					Have questions or need assistance? We're here to help with your escape
					room adventure.
				</p>
			</div>
		</section>

		{/* Contact Information */}
		<section
			class="py-16 bg-gradient-to-b from-purple-900 to-indigo-900 text-white"
		>
			<div class="container mx-auto px-4">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div
						class="bg-purple-800/50 backdrop-blur-sm p-8 rounded-xl text-center border border-purple-700"
					>
						<div
							class="bg-purple-700 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4"
						>
							<MapPinIcon class="h-8 w-8" />
						</div>
						<h3 class="text-xl font-bold mb-2">Our Location</h3>
						<p class="text-purple-200">
							6250 N Lockwood Ridge Rd , Sarasota, FL 34243
						</p>
						<a
							href="https://www.google.com/maps?q=6250+N+Lockwood+Ridge+Rd,+Sarasota,+FL+34243"
							target="_blank"
							rel="noopener noreferrer"
							class={getButtonClass({ class: "mt-6" })}
						>
							Get Directions
							<ArrowRightIcon class="ml-1 h-4 w-4" />
						</a>
					</div>

					<div
						class="bg-purple-800/50 backdrop-blur-sm p-8 rounded-xl text-center border border-purple-700"
					>
						<div
							class="bg-purple-700 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4"
						>
							<PhoneIcon class="h-8 w-8" />
						</div>
						<h3 class="text-xl font-bold mb-2">Phone & Email</h3>
						<p class="text-purple-200">
							<a href="tel:+19418065858" class="hover:text-white">
								(941) 555-1234
							</a>
						</p>
						<p class="text-purple-200 mt-2">
							<a
								href="mailto:escaperealityfl@gmail.com"
								class="hover:text-white"
							>
								escaperealityfl@gmail.com
							</a>
						</p>
						<p class="text-purple-300 mt-4 text-sm">
							We respond to all inquiries within 24 hours
						</p>
					</div>

					<div
						class="bg-purple-800/50 backdrop-blur-sm p-8 rounded-xl text-center border border-purple-700"
					>
						<div
							class="bg-purple-700 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4"
						>
							<ClockIcon class="h-8 w-8" />
						</div>
						<h3 class="text-xl font-bold mb-2">Hours of Operation</h3>
						<p class="text-purple-200">Monday - Sunday: 10:00 AM - 10:00 PM</p>
						<p class="text-purple-200 mt-2">Last booking starts at 8:30 PM</p>
						<p class="text-purple-300 mt-4 text-sm">
							Open all holidays except Christmas Day
						</p>
					</div>
				</div>
			</div>
		</section>

		{/* Contact Form & Map */}
		<section class="py-16 bg-gray-900">
			<div class="container mx-auto px-4">
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 text-white">
					{/* Contact Form */}
					<div>
						<h2 class="text-3xl font-bold mb-6">Send Us a Message</h2>
						<p class="text-gray-300 mb-8">
							Have a question or want to book a special event? Fill out the form
							below and we'll get back to you as soon as possible.
						</p>

						<form class="space-y-6">
							<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
								<div class="flex flex-col gap-2">
									<label for="first-name" class="ml-1">First Name</label>
									<Input
										id="first-name"
										placeholder="Enter your first name"
										class="!bg-gray-800"
									/>
								</div>
								<div class="flex flex-col gap-2">
									<label for="last-name" class="ml-1">Last Name</label>
									<Input
										id="last-name"
										placeholder="Enter your last name"
										class="!bg-gray-800"
									/>
								</div>
							</div>

							<div class="flex flex-col gap-2">
								<label for="email" class="ml-1">Email</label>
								<Input
									id="email"
									type="email"
									placeholder="Enter your email"
									class="!bg-gray-800"
								/>
							</div>

							<div class="flex flex-col gap-2">
								<label for="phone" class="ml-1">Phone (optional)</label>
								<Input
									id="phone"
									placeholder="Enter your phone number"
									class="!bg-gray-800"
								/>
							</div>

							<div class="space-y-2">
								<label>Inquiry Type</label>
								<div class="flex flex-col space-y-2">
									<div class="flex items-center space-x-2">
										<input type="radio" value="general" id="general" />
										<label for="general">General Question</label>
									</div>
									<div class="flex items-center space-x-2">
										<input type="radio" value="booking" id="booking" />
										<label for="booking">Booking Assistance</label>
									</div>
									<div class="flex items-center space-x-2">
										<input type="radio" value="corporate" id="corporate" />
										<label for="corporate">Corporate Event</label>
									</div>
									<div class="flex items-center space-x-2">
										<input type="radio" value="feedback" id="feedback" />
										<label for="feedback">Feedback</label>
									</div>
								</div>
							</div>

							<div class="flex flex-col gap-2">
								<label for="message" class="ml-1">Message</label>
								<Textarea
									id="message"
									placeholder="Enter your message"
									class="!bg-gray-800 !min-h-[150px]"
								/>
							</div>

							<Button type="submit">
								<SendIcon class="mr-2 h-4 w-4" />
								Send Message
							</Button>
						</form>
					</div>

					{/* Map & Additional Info */}
					<div class="space-y-8">
						<div
							class="relative h-[400px] rounded-xl overflow-hidden bg-gray-800 w-full border border-gray-700 flex flex-col items-center justify-center"
						>
							<iframe
								src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3521.2572551722376!2d-82.497217024823!3d27.385593037955036!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88c341c8e7d7c1db%3A0xa76f7c2fd3bb3c88!2s6250%20N%20Lockwood%20Ridge%20Rd%2C%20Sarasota%2C%20FL%2034243!5e0!3m2!1sen!2sus!4v1713960177000!5m2!1sen!2sus"
								width="100%"
								height="100%"
								style="border: 0;"
								allowfullscreen={true}
								loading="lazy"
								title="Escape Reality"></iframe>
						</div>

						<div class="bg-gray-800 border border-gray-600 p-6 rounded-xl">
							<h3 class="text-xl font-bold text-white mb-4">Connect With Us</h3>
							<p class="text-gray-300 mb-4">
								Follow us on social media for the latest news, special offers,
								and behind-the-scenes content.
							</p>
							<div class="flex space-x-4">
								<a
									href="https://www.facebook.com/escaperealitysarasota"
									class="bg-gray-700 hover:bg-purple-600 transition-colors p-3 rounded-full"
								>
									<FacebookIcon class="h-6 w-6 text-white" />
									<span class="sr-only">Facebook</span>
								</a>
								<a
									href="http://instagram.com/escape.reality.srq"
									class="bg-gray-700 hover:bg-purple-600 transition-colors p-3 rounded-full"
								>
									<InstagramIcon class="h-6 w-6 text-white" />
									<span class="sr-only">Instagram</span>
								</a>
								<a
									href="https://www.youtube.com/channel/UC1n53dwNE5vK40VvG0U0iYQ"
									class="bg-gray-700 hover:bg-purple-600 transition-colors p-3 rounded-full"
								>
									<YoutubeIcon class="h-6 w-6 text-white" />
									<span class="sr-only">Youtube</span>
								</a>
							</div>
						</div>

						<div class="bg-gray-800 border border-gray-600 p-6 rounded-xl">
							<h3 class="text-xl font-bold text-white mb-4">
								Special Inquiries
							</h3>
							<div class="space-y-4">
								<div>
									<h4 class="font-bold text-white">Corporate Events</h4>
									<p class="text-gray-300 text-sm">
										For team building and corporate events, contact our events
										coordinator directly:
									</p>
									<a
										href="mailto:escaperealityfl@gmail.com"
										class="text-purple-400 transition-colors hover:text-purple-300"
									>
										escaperealityfl@gmail.com
									</a>
								</div>
								<div>
									<h4 class="font-bold text-white">Large Groups</h4>
									<p class="text-gray-300 text-sm">
										For groups of 12 or more, please contact us directly to
										arrange your visit:
									</p>
									<a
										href="tel:+19418065858"
										class="text-purple-400 transition-colors hover:text-purple-300"
									>
										(941) 806-5858
									</a>
								</div>
								<div>
									<h4 class="font-bold text-white">Press & Media</h4>
									<p class="text-gray-300 text-sm">
										For press inquiries and media opportunities:
									</p>
									<a
										href="mailto:escaperealityfl@gmail.com"
										class="text-purple-400 transition-colors hover:text-purple-300"
									>
										escaperealityfl@gmail.com
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		{/* FAQ Quick Links */}
		<section class="py-16 bg-black text-white">
			<div class="container mx-auto px-4">
				<div class="text-center mb-12">
					<h2 class="text-3xl md:text-4xl font-bold mb-4">Common Questions</h2>
					<p class="text-lg text-gray-300 max-w-2xl mx-auto">
						Find quick answers to our most frequently asked questions.
					</p>
				</div>

				<div
					class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-4xl mx-auto"
				>
					<div class="bg-gray-800 p-6 rounded-xl border border-gray-700">
						<h3 class="font-bold text-white mb-2">
							Do I need to book in advance?
						</h3>
						<p class="text-gray-300 text-sm mb-3">
							Yes, we recommend booking at least 24-48 hours in advance,
							especially for weekend slots.
						</p>
						<a
							href="/faq"
							class="text-purple-400 hover:text-purple-300 text-sm flex items-center"
						>
							More booking info
							<ArrowRightIcon class="ml-1 h-3 w-3" />
						</a>
					</div>

					<div class="bg-gray-800 p-6 rounded-xl border border-gray-700">
						<h3 class="font-bold text-white mb-2">How many people can play?</h3>
						<p class="text-gray-300 text-sm mb-3">
							Our escape rooms accommodate 2-8 players per game. We recommend
							4-6 players for the optimal experience.
						</p>
						<a
							href="/faq"
							class="text-purple-400 hover:text-purple-300 text-sm flex items-center"
						>
							More gameplay info
							<ArrowRightIcon class="ml-1 h-3 w-3" />
						</a>
					</div>

					<div class="bg-gray-800 p-6 rounded-xl border border-gray-700">
						<h3 class="font-bold text-white mb-2">Do you offer gift cards?</h3>
						<p class="text-gray-300 text-sm mb-3">
							Yes! Gift cards are available for purchase online or in person and
							are valid for 12 months.
						</p>
						<a
							href="/gift-cards"
							class="text-purple-400 hover:text-purple-300 text-sm flex items-center"
						>
							View gift cards
							<ArrowRightIcon class="ml-1 h-3 w-3" />
						</a>
					</div>
				</div>

				<div class="text-center mt-8">
					<a href="/faq" class={getButtonClass({})}>
						View All FAQs
						<ArrowRightIcon class="ml-2 h-4 w-4" />
					</a>
				</div>
			</div>
		</section>

		{/* Booking CTA */}
		<BookingCTA />
	</div>
</Layout>
