---
import { MailIcon, MapPinIcon, PhoneIcon } from "lucide-react";
import FacebookIcon from "~/components/icons/FacebookIcon.astro";
import InstagramIcon from "~/components/icons/InstagramIcon.astro";
import YoutubeIcon from "~/components/icons/YoutubeIcon.astro";
---

<footer id="contact" class="pt-18 pb-10 px-4 border-t border-primary/20">
	<div class="container mx-auto">
		<div
			class="grid grid-cols-1 gap-12 mb-16 md:grid-cols-3 md:justify-items-center"
		>
			<div>
				<div>
					<h3
						class="font-heading text-2xl mb-4 animate-glitch motion-reduce:animate-none motion-reduce:text-shadow-glitch"
					>
						ESCAPE_REALITY
					</h3>
					<p class="text-sm text-muted-foreground mb-4 text-pretty max-w-66">
						Breaking boundaries since 2016. Sarasota's ultimate escape room
						experience.
					</p>
				</div>
				<div class="flex gap-3">
					<a
						href="https://www.facebook.com/escaperealitysarasota"
						rel="noopener"
						referrerpolicy="no-referrer"
						class="size-8 border border-primary/30 rounded flex items-center justify-center text-primary hover:border-primary hover:shadow-[0_0_10px_var(--primary)/0.5] transition-[border-color,box-shadow] group"
					>
						<FacebookIcon
							class="size-4 fill-muted-foreground/80 group-hover:fill-muted-foreground transition-colors"
						/>
					</a>
					<a
						href="http://instagram.com/escape.reality.srq"
						rel="noopener"
						referrerpolicy="no-referrer"
						class="size-8 border border-primary/30 rounded flex items-center justify-center text-primary hover:border-primary hover:shadow-[0_0_10px_var(--primary)/0.5] transition-[border-color,box-shadow] group"
					>
						<InstagramIcon
							class="size-4 fill-muted-foreground/80 group-hover:fill-muted-foreground transition-colors"
						/>
					</a>
					<a
						href="https://www.youtube.com/channel/UC1n53dwNE5vK40VvG0U0iYQ"
						rel="noopener"
						referrerpolicy="no-referrer"
						class="size-8 border border-primary/30 rounded flex items-center justify-center text-primary hover:border-primary hover:shadow-[0_0_10px_var(--primary)/0.5] transition-[border-color,box-shadow] group"
					>
						<YoutubeIcon
							class="size-4 fill-muted-foreground/80 group-hover:fill-muted-foreground transition-colors"
						/>
					</a>
				</div>
			</div>
			<div>
				<h4 class="text-lg mb-4 text-primary">CONTACT_US</h4>
				<div class="space-y-3 text-sm">
					<a
						href="mailto:escaperealityfl@gmail.com"
						class="flex items-center gap-2 text-muted-foreground hover:text-primary transition-colors group"
					>
						<MailIcon className="size-4" />
						<span>escaperealityfl@gmail.com</span>
					</a>
					<a
						href="tel:+19418065858"
						class="flex items-center gap-2 text-muted-foreground hover:text-primary transition-colors group"
					>
						<PhoneIcon className="size-4" />
						<span>(941) 806-5858</span>
					</a>
					<a
						href="https://maps.app.goo.gl/1Rw39Y4ZwH6oAGvz9"
						target="_blank"
						rel="noopener"
						referrerpolicy="no-referrer"
						class="flex items-center gap-2 text-muted-foreground hover:text-primary transition-colors group"
					>
						<MapPinIcon className="size-4 mt-1" />
						<span>
							6250 Lockwood Ridge Rd<br />
							Sarasota, FL
						</span>
					</a>
				</div>
			</div>
			<div>
				<h4 class="text-lg mb-4 text-primary">QUICK_LINKS</h4>
				<nav class="space-y-2 text-sm">
					<a
						href="#"
						class="block text-muted-foreground hover:text-primary transition-all duration-200 hover:translate-x-2"
					>
						&gt; Available Rooms
					</a>
					<a
						href="#"
						class="block text-muted-foreground hover:text-primary transition-all duration-200 hover:translate-x-2"
					>
						&gt; Booking
					</a>
					<a
						href="#"
						class="block text-muted-foreground hover:text-primary transition-all duration-200 hover:translate-x-2"
					>
						&gt; Reservations
					</a>
				</nav>
			</div>
		</div>
		<div
			class="text-muted-foreground pt-8 border-t border-primary/20 text-xs flex justify-center"
		>
			<span>
				<span class="text-lg">&copy;</span>
				{new Date().getFullYear()} ESCAPE REALITY. All rights reserved.
			</span>
		</div>
	</div>
</footer>
